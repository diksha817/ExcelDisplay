@layout LoginLayout
@page "/"
@using temporaryexceldisplay.Pages;
@inject NavigationManager NavigationManager

@if (errorMessage != null)
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<body>
    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" onsubmit="@HandleLogin">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Username:</label><br>
                                <div class="col-md-12">
                                    <input @bind-value="username" type="text" class="form-control" placeholder="Enter username" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <div class="col-md-12">
                                    <input @bind-value="password" type="text" class="form-control" placeholder="Enter password" />
                                </div>

                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



@code {
    private string username;
    private string password;
    private string errorMessage;

    private void HandleLogin()
    {
        if (username == "admin" && password == "password123")
        {

            NavigationManager.NavigateTo("https://localhost:7058/Index");
        }
        else
        {
            errorMessage = "Invalid username or password";
        }
    }
}

